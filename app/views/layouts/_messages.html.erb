<div class="container">
  <% flash.each do |name, msg| %>
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="alert alert-<%= name == "notice" ? "success" : "danger" %> alert-dismissible" role="alert">
        <button type="button" class="btn-close" aria-label="Close"></button>
        <%= msg %>
      </div>
    </div>
  </div>
  <% end %>
</div>
